<yas>
<!-- deve definir-se um objeto para raiz da arvore, assim -->
<!-- como o comprimento dos tres eixos (cilindros) -->

<scene root="r" axis_length="1" />

<views default="v">
    <perspective id="v" near="0.1" far="500" angle="0">
        <from x="0.1" y="0.1" z="0.1" />
        <to x="20" y="20" z="20" />
    </perspective>
</views>    


<!-- Illumination and clear colour -->
<ambient>
    <ambient r="0.5" g="0.5" b="0.5" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ambient>


<!-- Lights -->
    <!-- Deve existir um ou mais blocos "omni" ou "spot" -->
    <!-- Os identificadores "id" nao podem ser repetidos -->
<lights>	
	<omni id="l" enabled="1">                                                       	       
        <location  x="0" y="10" z="0" w="1" />       	   
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </omni>
</lights>

<!-- Textures -->
    <!-- Deve existir um ou mais blocos "texture" -->
    <!-- Os identificadores "id" nao podem ser repetidos -->

<textures>
	<!-- Tree trunk -->
    <texture id="tex" file="images/trunk-image.jpg"/>
</textures>


<materials>
    <!-- Deve existir um ou mais blocos "material" -->
    <!-- Os identificadores "id" nao podem ser repetidos -->

	<!-- Pyramid material -->
    <material id="m" shininess = "1">
        <emission r="0.0" g="0.0" b="0.0" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" /> 
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />                               
        <specular r="0" g="0" b="0" a="1" />        
    </material>
</materials>

<transformations>
<!-- Deve existir um ou mais blocos "transformation" -->
<!-- Os identificadores "id" nao podem ser repetidos -->
<!-- Os angulos sao expressos em graus -->
    <transformation id="trans">
        <!-- instrucoes a usar sem limite nem ordem -->
        <!-- deve existir pelo menos uma transformacao -->
		<rotate axis="x" angle="30"  />
        <translate x="0" y="0" z="0" />
    </transformation>
	
</transformations>


<primitives>

    <primitive id="rectangle">
        <rectangle x1="0" y1="0" x2="1" y2="1" />
    </primitive>
	
	<primitive id="triangle">
        <triangle x1="0" y1="0" z1="0"
                x2="1" y2="0" z2="0"
                x3="0.5" y3="1" z3="0" />
    </primitive>

    <primitive id="cylinder">
       <cylinder base="1" top="1" height="2" slices="12" stacks="4" />
    </primitive>
</primitives>


<!-- The nodes -->
<components>    

    <!-- The root node -->
    <component id="r"> 

        <transformation>
            <transformationref id="trans"/>  
        </transformation>

        <materials>
            <material id="m"/> 
        </materials>   

        <texture id= "tex" length_s="1" length_t="1"/>  

        <children>

            <!-- <componentref id="luzes" /> -->   
            <componentref id="rectangle" /> 
            <!-- <componentref id="arvores" />   -->
            <!-- <componentref id="chao" /> -->
            <!-- <componentref id="bancos" /> -->
        </children>

    </component>

</components>

</yas>